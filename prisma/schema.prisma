generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  DELIVERYMAN
  ADMIN
}

model User {
  id           String        @id @default(uuid())
  cpf          String        @unique
  password     String
  role         UserRole      @default(DELIVERYMAN)
  deliverymans Deliveryman[]

  @@map("users")
}

model Deliveryman {
  id     String  @id @default(uuid())
  userId String  @map("user_id")
  email  String  @unique
  name   String
  orders Order[]

  user User @relation(fields: [userId], references: [id])

  @@map("deliverymans")
}

model Receiver {
  id      String  @id @default(uuid())
  email   String  @unique
  name    String
  address String
  orders  Order[]

  @@map("receivers")
}

model Order {
  id            String    @id @default(uuid())
  deliverymanId String    @map("deliveryman_id")
  receiverId    String    @map("receiver_id")
  address       String
  createdAt     DateTime  @default(now()) @map("created_at")
  availableAt   DateTime? @map("available_at")
  withdrawalAt  DateTime? @map("withdrawal_at")
  deliveredAt   DateTime? @map("delivered_at")
  returnedAt    DateTime? @map("returned_at")
  photoUrl      String?   @map("photo_url")

  deliveryman Deliveryman @relation(fields: [deliverymanId], references: [id])
  receiver    Receiver    @relation(fields: [receiverId], references: [id])

  @@map("orders")
}
